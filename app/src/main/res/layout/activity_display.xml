<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35e272"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.example.omar.calcounter.Activites.DisplayActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:background="#433ee7"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/totalCals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/food_total_text"
            android:textStyle="bold"
           android:paddingRight="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="28sp"
            android:textColor="#ffee1d27"/>
        <TextView
            android:id="@+id/totalFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/food_item_number"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#0d0707"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_below="@+id/linear"
        android:dividerHeight="2dp"
        android:divider="#212121"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
